<%- include('Header') %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <!-- Include Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <style>
      #pics {
        object-fit: cover;
        height: 300px;
        width: 100%;
      }
    </style>
  </head>

  <body>
    <div class="page-wrapper">
      <div class="page-breadcrumb">
        <div class="container">
          <div class="row">
            <h3 class="text-capitalize mb-3 ps-3">
              Hello <%= locals.users.name %> !
            </h3>

            <% blogs.map((blog,i)=>{ %>
            <div class="col-md-6 mb-4">
              <div class="card border">
                <img
                  src="<%= blog.image %>"
                  class="card-img-top p-3"
                  alt="Blog Image"
                  id="pics"
                />
                <div class="card-body">
                  <h5 class="card-title text-capitalize"><%= blog.title %></h5>
                  <p class="card-text"><%= blog.caption %></p>
                  <div class="">
                    <a
                      href="/deleteblog?id=<%= blog._id %>"
                      class="btn btn-danger text-white"
                      >delete</a
                    >
                    <a
                      class="btn btn-primary text-white"
                      href="/editblog?id=<%= blog._id %>"
                      >Edit</a
                    >
                  </div>
                </div>
              </div>
            </div>
            <%})%>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
<%- include('Footer') %>
